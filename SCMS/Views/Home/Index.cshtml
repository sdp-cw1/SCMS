@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Smart Learning Campus</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="~/css/custom.css" rel="stylesheet">

    <!-- Bootstrap JS and dependencies -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>


    <!-- Main Content -->
    <main class="mainContentBody col-md-12 ms-sm-auto col-lg-12 px-4">

        <!-- Header -->
        <div class="row mb-4">
            <div class="col-8">

                <img src="~/images/HomePageBanner.png">

                 <!-- New Schedules Section -->
                <div class="row mb-4">
                    <div class="col-12">
                        <h2>New Schedules:</h2>
                        <ul class="list-group DasboardScheduled">
                            <li class="list-group-item">
                                <div class="classDetails">
                                    <span class="className">Digital Entrepreneurship - KUT(Top-Up) </span>
                                    <span class="dateInfo bg-info">24/02/2025</span>
                                </div>
                                <div class="locationDetails">
                                    <span class="locationInfo">Block E, Hall - A1</span>
                                    <span class="teacherInfo">Ms. Karishani Bamunawita</span>
                                </div>
                            </li>
                            <li class="list-group-item">
                                <div class="classDetails">
                                    <span class="className">Digital Entrepreneurship - KUT(Top-Up) </span>
                                    <span class="dateInfo bg-info">24/02/2025</span>
                                </div>
                                <div class="locationDetails">
                                    <span class="locationInfo">Block E, Hall - A1</span>
                                    <span class="teacherInfo">Ms. Karishani Bamunawita</span>
                                </div>
                            </li>
                            <li class="list-group-item">
                                <div class="classDetails">
                                    <span class="className">Digital Entrepreneurship - KUT(Top-Up) </span>
                                    <span class="dateInfo bg-info">24/02/2025</span>
                                </div>
                                <div class="locationDetails">
                                    <span class="locationInfo">Block E, Hall - A1</span>
                                    <span class="teacherInfo">Ms. Karishani Bamunawita</span>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>

                <!-- Image Carousel -->
                <div class="row mb-4">
                    <div class="col-12">
                        <div id="carouselExample" class="carousel slide" data-bs-ride="carousel">
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <img src="~/images/EventBannerHome.png" class="d-block w-100" alt="Music Event">
                                </div>
                            </div>
                            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Previous</span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Next</span>
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Forums Section -->
                <div class="row mb-4">
                    <div class="col-12">
                        <h2>Forums:</h2>
                        <div class="card-deck">
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title">ESOFT IT Society Forum</h5>
                                    <p class="card-text"><b>Topic:</b> A forum in a Learning Management System that allows students to interact, share ideas, ask questions, and discuss course-related topics.</p>
                                </div>
                            </div>
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title">Final Top-Up Forum</h5>
                                    <p class="card-text"><b>Topic:</b> A forum in a Learning Management System that allows students to interact, share ideas, ask questions, and discuss course-related topics.</p>
                                </div>
                            </div>
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title">Kingston University Forum</h5>
                                    <p class="card-text"><b>Topic:</b> A forum in a Learning Management System that allows students to interact, share ideas, ask questions, and discuss course-related topics.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
            </div>
            <div class="col-4">

                <!-- Date Widget -->
                <div class="widget-box text-center">
                    <div class="date-box">
                        <div class="date-item">09</div>
                        <div class="date-item">FEB</div>
                        <div class="date-item">25</div>
                    </div>
                </div>

                <!-- Question of the Day Widget -->
                <div class="widget-box">
                    <h5 class="fw-bold mb-3">Question of the day</h5>
                    <p>1. Lorem Ipsum is simply dummy text of the printing and typesetting industry?</p>
                    <form>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="option1">
                            <label class="form-check-label" for="option1">Lorem Ipsum is simply</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="option2" checked>
                            <label class="form-check-label" for="option2">dummy text</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="option3">
                            <label class="form-check-label" for="option3">simply</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="option4">
                            <label class="form-check-label" for="option4">Lorem</label>
                        </div>
                        <button type="submit" class="btn btn-success mt-3">Submit</button>
                    </form>
                </div>

                <!-- Calendar Widget -->
                <div class="widget-box">
                    <h5 class="fw-bold text-center mb-3">Calendar Widget</h5>
                    <div class="text-center mb-2">
                        <strong>February</strong>
                    </div>
                    <div class="calendar-grid">
                        @for (int day = 1; day <= 31; day++)
                        {
                            var activeDays = new List<int> { 1, 2, 3, 4, 5, 6 };
                            var isActive = activeDays.Contains(day) ? "active" : "";
                            <div class="calendar-day @isActive">
                                @day.ToString("00")
                            </div>
                        }
                    </div>
                </div>

                <!-- Chat Widget -->
                <div class="widget-box">
                    <h5 class="fw-bold text-center mb-3">Chat Room</h5>
                    <div class="list-group">
                        <a href="#" class="list-group-item list-group-item-action">
                            <strong>Garika Jayasundara</strong> 
                            <span>To: <em>University Student Group</em> </span>
                            <p> Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when... </p>
                        </a>
                        <a href="#" class="list-group-item list-group-item-action">
                            <strong>Dhanujaya</strong> 
                            <span>To: <em>Student Advice</em></span>
                            <p> Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when... </p>
                        </a>
                        <a href="#" class="list-group-item list-group-item-action">
                            <strong>Amaranga</strong> 
                            <span>To: <em>Course Assistance</em></span>
                            <p> Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when... </p>
                        </a>
                    </div>
                </div>

                
                
            </div>
        </div>

       

        

        

        
    </main>


    
</body>
</html>
