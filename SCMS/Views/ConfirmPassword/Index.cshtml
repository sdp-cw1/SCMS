@{
    Layout = null; /* No default header/footer */
    ViewData["Title"] = "Confirm Password";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Confirm Password | Smart Learning Campus</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/custom.css"> <!-- Custom CSS -->
</head>
<body>
    <div class="container-fluid register-container">
        <div class="row">
            <!-- Left Side: Registration Form -->
            <div class="col-md-6 d-flex align-items-center justify-content-center form-container">
                <div class="register-box text-center">
                    <img src="~/images/logo.png" alt="Logo" class="logo"> <!-- Your Logo -->
                    <h3 class="mt-3">Smart Learning Campus</h3>
                    <h4 class="mt-2">Welcome To Smart Learning Campus</h4>
                    <p>Welcome, Please Enter Your Details</p>

                    <form method="post" asp-action="ConfirmPassword">
                        <div class="form-group mb-3">
                            <label class="text-start w-100">Email Address</label>
                            <!-- Display the email passed from TempData -->
                            <input type="email" class="form-control" name="email" value="@ViewBag.Email" readonly required placeholder="Enter your email">
                        </div>

                        <div class="form-group mb-3">
                            <label class="text-start w-100">Create Password</label>
                            <input type="password" class="form-control" name="password" required placeholder="Enter your password">
                        </div>

                        <div class="form-group mb-3">
                            <label class="text-start w-100">Confirm Password</label>
                            <input type="password" class="form-control" name="confirmPassword" required placeholder="Confirm your password">
                        </div>

                        <!-- Display Error and Success Messages -->
                        @if (ViewBag.Error != null)
                        {
                            <span class="text-danger">@ViewBag.Error</span> <!-- Error Message -->
                        }
                        @if (ViewBag.Success != null)
                        {
                            <span class="text-success">@ViewBag.Success</span> <!-- Success Message -->
                        }

                        <button type="submit" class="btn btn-primary w-100">Confirm Password</button>
                    </form>

                    <!-- Footer Text -->
                    <p class="mt-4 footer-text">Powered By SCMS 2025.</p>
                </div>
            </div>

            <!-- Right Side: Image -->
            <div class="col-md-6 d-none d-md-block image-container">
                <img src="~/images/LoginCoverImage.webp" alt="Background" class="img-fluid">
            </div>
        </div>
    </div>
</body>
</html>
