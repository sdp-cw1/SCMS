@{
    Layout = null; /* No default header/footer */
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login | Smart Learning Campus</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link rel="stylesheet" href="~/css/custom.css"> <!-- Custom CSS -->
</head>
<body>
    <div class="container-fluid login-container">
        <div class="row">
            <!-- Left Side: Login Form -->
            <div class="col-md-6 d-flex align-items-center justify-content-center form-container loginContainerClass">
                <div class="login-box text-center">
                    <div class="welcomeLogoText">
                        <img src="~/images/logo.png" alt="Logo" class="logo"> <!-- Your Logo -->
                        <h3 class="mt-3">Smart Learning Campus</h3>
                    </div>

                    <h4 class="mt-2">Welcome Back</h4>
                    <p>Welcome Back, Please Enter Your Details</p>

                    <!-- Sign In / Sign Up Toggle -->
                    <div class="btn-group w-100 mb-3 signInSignUpSection" role="group">
                        <button type="button" class="btn btn-light active SignIn">Sign In</button>
                        <button onclick="window.location.href='/AuthEmail/Index'" class="btn btn-light SignUp">
                            Sign Up
                        </button>
                    </div>

                    <!-- Display the error message in red if any -->
                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger">
                            @ViewBag.Error
                        </div>
                    }

                    <!-- Login Form -->
                    <form method="post" action="/Login/Authenticate">
                        <div class="form-group mb-3 LoginPageImailSection">
                            <span class="input-group-text"><i class="fa-regular fa-envelope"></i></span>
                            <input type="email" class="form-control" name="email" required placeholder="Enter your email">
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Continue</button>
                    </form>

                    <!-- Footer Text -->
                    <p class="mt-4 footer-text">Powered By SCMS 2025.</p>
                </div>
            </div>

            <!-- Right Side: Image -->
            <div class="col-md-6 d-none d-md-block image-container">
                <img src="~/images/LoginCoverImage.webp" alt="Background" class="img-fluid">
            </div>
        </div>
    </div>
</body>
</html>
