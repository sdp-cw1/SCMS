@{
    Layout = "~/Views/Shared/_adminLayout.cshtml";
    ViewData["Title"] = "User Management age";
}



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Smart Learning Campus</title>
    <!-- Bootstrap CSS (Local) -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true">
    <!-- Bootstrap JS (Local) -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/custom.css" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#continueButton").click(function () {
                var selectedUserType = $("#userType").val();
                $(".addNewStudentUserForm, .addNewInstructorUserForm, .addNewAdminUserForm").hide();
                if (selectedUserType === "student") {
                    $(".addNewStudentUserForm").show();
                } else if (selectedUserType === "instructor") {
                    $(".addNewInstructorUserForm").show();
                } else if (selectedUserType === "admin") {
                    $(".addNewAdminUserForm").show();
                }
            });
        });
    </script>
</head>
<body class="bg-light">
    <div class="d-flex">

        <!-- Header -->
        <div class="row mb-4 addNewUserRow">
            <div class="col-12">

                <img src="~/images/HomePageBanner.png">
                
                <div class="row mb-4">
                    <div class="col-12">
                        <h5 class="d-inline-block me-3">Add a new user</h5>
                        <select id="userType" class="form-select w-auto d-inline-block">
                            <option value="student">Student</option>
                            <option value="instructor">Instructor</option>
                            <option value="admin">Admin</option>
                        </select>
                        <button id="continueButton" class="btn btn-primary ms-2">Continue</button>
                    </div>
                </div>

                <div class="row">
                    <div class="col-4 addNewStudentUserForm" style="display: none;">
                        <div class="card">
                            <form method="post" action="">
                                <h5>
                                    Add a new Student
                                </h5>
                                <div class="mb-3 p-3">
                                    <label for="userName" class="form-label">User Name</label>
                                    <input type="text" name="user_name" id="userName" class="form-control" required>
                                </div>
                                <div class="mb-3 p-3">
                                    <label for="userNIC" class="form-label">NIC</label>
                                    <input type="text" name="user_nic" id="userNIC" class="form-control" required>
                                </div>
                                <div class="mb-3 p-3">
                                    <label for="userEmail" class="form-label">Email</label>
                                    <input type="email" id="userEmail" name="user_email" class="form-control" required>
                                </div>
                                <div class="mb-3 p-3">
                                    <label for="userPhoneNumber" class="form-label">Phone Number</label>
                                    <input type="tel" id="userPhoneNumber" name="user_phone" class="form-control" required>
                                </div>
                                <div class="mb-3 p-3">
                                    <label for="userPassword" class="form-label">Password</label>
                                    <input type="password" id="userPassword" name="user_password" class="form-control" required>
                                </div>
                                <div class="mb-3 p-3">
                                    <label for="userDOB" class="form-label">Date of Birth</label>
                                    <input type="date" id="userDOB" name="user_dob" class="form-control" required>
                                </div>
                                <div class="mb-3 p-3">
                                    <label for="userFirstName" class="form-label">First Name</label>
                                    <input type="text" id="userFirstName" name="user_firstname" class="form-control" required>
                                </div>
                                <div class="mb-3 p-3">
                                    <label for="userLastName" class="form-label">Last Name</label>
                                    <input type="text" id="userLastName" name="user_lastname" class="form-control" required>
                                </div>
                                <div class="mb-3 p-3">
                                    <label for="userAddress" class="form-label">Address</label>
                                    <input type="text" id="userAddress" name="user_address" class="form-control" required>
                                </div>
                                <div class="mb-3 p-3 notificationCheckbox">
                                    <span>Let us know how you like to be notified:</span>
                                    <div class="form-check emailNotificationCheckbox">
                                        <input class="form-check-input" type="checkbox" value="" id="emailNotification">
                                        <label class="form-check-label" for="emailNotification">Email Notification</label>
                                    </div>
                                    <div class="form-check appNotificationCheckbox">
                                        <input class="form-check-input" type="checkbox" value="" id="appNotification">
                                        <label class="form-check-label" for="appNotification">App Notification</label>
                                    </div>
                                </div>

                                <div class="mb-3 p-3 text-center">
                                    <button type="submit" class="btn btn-primary">Create User</button>
                                </div>
                            </form>
                        </div>
                    </div>

                    <div class="col-4 addNewInstructorUserForm" style="display: none;">
                        <div class="card">
                            <h5>
                                Add a new Instructor
                            </h5>
                            <form method="post" action="">
                                <div class="mb-3 p-3">
                                    <label for="userName" class="form-label">Staff Id</label>
                                    <input type="text" name="staff_Id" id="staffId" class="form-control" required>
                                </div>
                                <div class="mb-3 p-3">
                                    <label for="userDOB" class="form-label">Date of Birth</label>
                                    <input type="date" id="userDOB" name="user_dob" class="form-control" required>
                                </div>
                                <div class="mb-3 p-3">
                                    <label for="userFirstName" class="form-label">First Name</label>
                                    <input type="text" id="userFirstName" name="user_firstname" class="form-control" required>
                                </div>
                                <div class="mb-3 p-3">
                                    <label for="userLastName" class="form-label">Last Name</label>
                                    <input type="text" id="userLastName" name="user_lastname" class="form-control" required>
                                </div>
                                <div class="mb-3 p-3 notificationCheckbox">
                                    <span>Let us know how you like to be notified:</span>
                                    <div class="form-check emailNotificationCheckbox">
                                        <input class="form-check-input" type="checkbox" value="" id="emailNotification">
                                        <label class="form-check-label" for="emailNotification">Email Notification</label>
                                    </div>
                                    <div class="form-check appNotificationCheckbox">
                                        <input class="form-check-input" type="checkbox" value="" id="appNotification">
                                        <label class="form-check-label" for="appNotification">App Notification</label>
                                    </div>
                                </div>

                                <div class="mb-3 p-3 text-center">
                                    <button type="submit" class="btn btn-primary">Create User</button>
                                </div>
                            </form>
                        </div>
                    </div>

                    <div class="col-4 addNewAdminUserForm" style="display: none;">
                        <div class="card">
                            <form method="post" action="">
                                <h5>
                                    Add a new Admin
                                </h5>
                                <div class="mb-3 p-3">
                                    <label for="userName" class="form-label">User Name</label>
                                    <input type="text" name="user_name" id="userName" class="form-control" required>
                                </div>
                                <div class="mb-3 p-3">
                                    <label for="userNIC" class="form-label">NIC</label>
                                    <input type="text" name="user_nic" id="userNIC" class="form-control" required>
                                </div>
                                <div class="mb-3 p-3">
                                    <label for="userEmail" class="form-label">Email</label>
                                    <input type="email" id="userEmail" name="user_email" class="form-control" required>
                                </div>
                                <div class="mb-3 p-3">
                                    <label for="userPhoneNumber" class="form-label">Phone Number</label>
                                    <input type="tel" id="userPhoneNumber" name="user_phone" class="form-control" required>
                                </div>
                                <div class="mb-3 p-3">
                                    <label for="userPassword" class="form-label">Password</label>
                                    <input type="password" id="userPassword" name="user_password" class="form-control" required>
                                </div>
                                <div class="mb-3 p-3 notificationCheckbox">
                                    <span>Let us know how you like to be notified:</span>
                                    <div class="form-check emailNotificationCheckbox">
                                        <input class="form-check-input" type="checkbox" value="" id="emailNotification">
                                        <label class="form-check-label" for="emailNotification">Email Notification</label>
                                    </div>
                                    <div class="form-check appNotificationCheckbox">
                                        <input class="form-check-input" type="checkbox" value="" id="appNotification">
                                        <label class="form-check-label" for="appNotification">App Notification</label>
                                    </div>
                                </div>

                                <div class="mb-3 p-3 text-center">
                                    <button type="submit" class="btn btn-primary">Create User</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

                
            </div>
        </div>

        
</body>
</html>
