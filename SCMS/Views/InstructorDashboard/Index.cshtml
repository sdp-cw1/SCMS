@{
    Layout = "~/Views/Shared/_instructorLayout.cshtml";
    ViewData["Title"] = "Instructor Dashboard";   
}



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Smart Learning Campus</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="~/css/custom.css" />
    
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://unpkg.com/gijgo@1.9.14/js/gijgo.min.js" type="text/javascript"></script>
    <link href="https://unpkg.com/gijgo@1.9.14/css/gijgo.min.css" rel="stylesheet" type="text/css" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://getbootstrap.com/docs/5.3/assets/css/docs.css" rel="stylesheet">
    <title>Bootstrap Example</title>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Flatpickr CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <!-- Bootstrap 5 -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gijgo/1.9.13/combined/js/gijgo.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/gijgo/1.9.13/combined/css/gijgo.min.css">

    <!-- Flatpickr JS -->
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            flatpickr("#startTime", {
                enableTime: true,
                noCalendar: true,
                dateFormat: "H:i",
                time_24hr: true
            });

            flatpickr("#endTime", {
                enableTime: true,
                noCalendar: true,
                dateFormat: "H:i",
                time_24hr: true
            });

            document.addEventListener("DOMContentLoaded", function () {
                flatpickr("#dateTimePicker", {
                    enableTime: true,
                    dateFormat: "Y-m-d H:i",
                    time_24hr: true
                });
            });
        });

        // document.addEventListener("DOMContentLoaded", function () {
        //     const datePicker = new tempusDominus.TempusDominus(document.getElementById("dateTimePicker"), {
        //         display: {
        //             components: {
        //                 calendar: true,
        //                 clock: true,
        //                 seconds: false
        //             }
        //         }
        //     });

        //     // Click event to open picker when clicking the icon
        //     document.getElementById("dateTimePickerIcon").addEventListener("click", function () {
        //         datePicker.toggle();
        //     });
        // });

        $(document).ready(function () {
            $('#datepicker').datepicker({
                uiLibrary: 'bootstrap5',
                format: 'yyyy-mm-dd'
            });
        });


    </script>

</head>
<body class="bg-light">
    <div class="d-flex">

        <!-- Header -->
        <div class="row mb-4">
            <div class="col-8">

                <img src="~/images/HomePageBanner.png">


                <!-- New Schedules Section -->
                <div class="row mb-4">
                    <div class="col-12">
                        

                    <!-- Calendar Widget -->
                        <div class="calendar-container">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <button class="btn btn-outline-primary">&#9664;</button>
                                <h4>February 2025</h4>
                                <button class="btn btn-outline-primary">&#9654;</button>
                            </div>
                            <table class="table table-bordered text-center">
                                <thead>
                                    <tr>
                                        <th>Mon</th>
                                        <th>Tue</th>
                                        <th>Wed</th>
                                        <th>Thu</th>
                                        <th>Fri</th>
                                        <th>Sat</th>
                                        <th>Sun</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <!-- Example row, generate dynamically from model -->
                                    <tr>
                                        <td></td>
                                        <td></td>
                                        <td>1</td>
                                        <td>2</td>
                                        <td>3</td>
                                        <td>4</td>
                                        <td>5</td>
                                    </tr>
                                    <tr>
                                        <td class="text-white">6</td>
                                        <td>7</td>
                                        <td>8</td>
                                        <td class="bg-success text-white">9</td>
                                        <td>10</td>
                                        <td>11</td>
                                        <td>12</td>
                                    </tr>
                                    <tr>
                                        <td>13</td>
                                        <td>14</td>
                                        <td>15</td>
                                        <td>16</td>
                                        <td>17</td>
                                        <td>18</td>
                                        <td>19</td>
                                    </tr>
                                    <tr>
                                        <td>20</td>
                                        <td>21</td>
                                        <td>22</td>
                                        <td>23</td>
                                        <td>24</td>
                                        <td>25</td>
                                        <td>26</td>
                                    </tr>
                                    <tr>
                                        <td>27</td>
                                        <td>28</td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                    </tr>
                                    <!-- More rows -->
                                </tbody>
                            </table>

                            <div class="scheduleTyes">
                                <span class="moduleType">
                                    Modules
                                </span>
                                <span class="eventsType">
                                    Events
                                </span>
                                <span class="workshopType">
                                    Workshop
                                </span>
                            </div>

                            <div class="sheduleMeetingForm">
                                <h5> Schedule a Module Lecture</h5>
                                <form action="" method="post">
                                    <div class="col-md-12">
                                        <div class="container mt-4 pl-0">
                                            <label for="dateTimePicker" class="form-label">Select Time</label>

                                            <input type="text" class="form-control" id="datepicker" placeholder="Select Date" />
                                            <script>
                                                $('#datepicker').datepicker({
                                                    uiLibrary: 'bootstrap5'
                                                });
                                            </script>
                                        </div>

                                    </div>
                                    <div class="col-md-12">

                                        <label for="inputBatch" class="form-label">Select Batch:</label>
                                        <select id="inputBatch" class="form-select">
                                            <option selected>KU - Top Up Sept  -  BSc(sp) in Computer Science</option>
                                            <option>London Met - Top Up Sept  -  BEng in Electrical Engineering</option>
                                        </select>
                                    </div>
                                    <div class="col-12">

                                        <label for="inputModule" class="form-label">Select Module:</label>
                                        <select id="inputModule" class="form-select">
                                            <option selected>Digital EntrePreneourShiP</option>
                                            <option>Mobile aPPlication DeveloPment</option>
                                            <option>Web aPPlication DeveloPment</option>
                                            <option>Software DeveloPment Practice</option>
                                        </select>
                                    </div>
                                    <div class="col-12">
                                        <div class="row">
                                            <div class="col-6">
                                                <label for="startTime" class="form-label">Start Time</label>
                                                <input type="text" id="startTime" class="form-control" placeholder="Select Start Time">
                                            </div>
                                            <div class="col-6">
                                                <label for="endTime" class="form-label mt-2">End Time</label>
                                                <input type="text" id="endTime" class="form-control" placeholder="Select End Time">
                                            </div>
                                        </div>

                                    </div>

                                    <div class="col-md-12">
                                        <label for="inputLocation" class="form-label">Select Location:</label>
                                        <select id="inputModule" class="form-select">
                                            <option selected>Block E,Class A</option>
                                            <option>Block A,Class B</option>
                                            <option>Block C,Class C</option>
                                            <option>Block D,Class D</option>
                                        </select>
                                    </div>
                                    <div class="col-md-12">
                                        <label for="inputNote" class="form-label">Note:</label>
                                        <textarea class="form-control" id="inputNote" rows="3" style="resize: none;" placeholder="Write additional notes here.."></textarea>
                                    </div>

                                    <div class="col-12">
                                        <button type="submit" class="btn btn-primary">Sign in</button>
                                        <button type="cancel" class="btn btn-primary">Cancel</button>
                                    </div>


                                </form>
                            </div>

                            

                        </div>
                </div>
            </div>
        </div>
    </div>

</body>
</html>


