@{
    ViewData["Title"] = "Entering Sign Up Email";
}

@{
    Layout = null; /* No default header/footer */
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/custom.css">
</head>
<body>

<div class="container-fluid vh-100 d-flex align-items-center justify-content-center">
    <div class="row w-100">
        <!-- Left Section -->
        <div class="col-md-6 d-flex flex-column justify-content-center text-center p-5">
            <img src="~/images/logo.png" alt="Smart Learning Campus" class="mb-3" width="150">
            <h2>Welcome To Smart Learning Campus</h2>
            <p class="text-muted">Welcome, Please Enter Your Details</p>

            <!-- Login Form -->
            <form method="post" asp-action="Authenticate">
                <div class="mb-3">
                    <label class="form-label">Email Address</label>
                    <input type="email" name="email" class="form-control" placeholder="example@email.com" required>
                </div>
                <button type="submit" class="btn btn-primary w-100">Continue</button>
            </form>

            @if (ViewBag.Error != null)
            {
                <p class="text-danger mt-2">@ViewBag.Error</p>
            }

            <p class="mt-3 text-muted">
                Lorem Ipsum is simply dummy text of the printing and typesetting industry.
            </p>
        </div>

        <!-- Right Section (Image) -->
        <div class="col-md-6 d-none d-md-block p-0">
            <img src="~/images/loginCoverImage.png" class="img-fluid vh-100 w-100 object-fit-cover" alt="Background Image">
        </div>
    </div>
</div>

</body>
</html>
