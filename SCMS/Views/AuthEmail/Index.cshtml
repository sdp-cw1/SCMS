@{
    ViewData["Title"] = "Entering Sign Up Email";
    Layout = null; /* No default header/footer */
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/custom.css">
</head>
<body>

    <div class="container-fluid vh-100 d-flex align-items-center justify-content-center signUpPageEmail">
        <div class="row w-100">
            <!-- Left Section -->
            <div class="col-md-6 d-flex flex-column justify-content-center text-center p-5 loginContainerClass">
                <div class="welcomeLogoText">
                    <img src="~/images/logo.png" alt="Logo" class="logo"> <!-- Your Logo -->
                    <h3 class="mt-3">Smart Learning Campus</h3>
                </div>

                <h4 class="mt-2">Welcome Back</h4>
                <p>Welcome Back, Please Enter Your Details</p>

                <!-- Sign In / Sign Up Toggle -->
                <div class="btn-group w-100 mb-3 signInSignUpSection" role="group">
                    <button onclick="window.location.href='/Login/Index'" type="button" class="btn btn-light SignIn">Sign In</button>
                    <button onclick="window.location.href='/AuthEmail/Index'" class="btn btn-light active SignUp">
                        Sign Up
                    </button>
                </div>

                <div class="notification-box yellow-notification">
                    To process Sign Up option you should enter the email which you gave to
                    <span class="highlight">esmartcampus</span>.
                </div>

                <!-- Email Input Form -->
                <form method="post" asp-action="Authenticate">
                    <div class="mb-3">
                        <input type="email" name="email" class="form-control" placeholder="example@email.com"
                               required value="@TempData["Email"]">
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Continue</button>
                </form>

                @if (ViewBag.Error != null)
                {
                    <p class="text-danger mt-2">@ViewBag.Error</p>
                }

                <p class="mt-3 text-muted">
                    Powered By SCMS 2025.
                </p>
            </div>

            <!-- Right Section (Image) -->
            <div class="col-md-6 d-none d-md-block p-0">
                <img src="~/images/LoginCoverImage.webp" class="img-fluid vh-100 w-100 object-fit-cover" alt="Background Image">
            </div>
        </div>
    </div>

</body>
</html>
