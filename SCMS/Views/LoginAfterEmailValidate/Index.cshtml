

@{
    Layout = null; /* No default header/footer */
}

@{
    ViewData["Title"] = "LoginAfterEmailValidate";
}


@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">
        @ViewBag.Error
    </div>
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login | Smart Learning Campus</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/custom.css"> <!-- Custom CSS -->
</head>
<body>
    <div class="container-fluid login-container">
        <div class="row">
            <!-- Left Side: Login Form -->
            <div class="col-md-6 d-flex align-items-center justify-content-center form-container loginContainerClass">
                <div class="login-box text-center">
                    <div class="welcomeLogoText">
                        <img src="~/images/logo.png" alt="Logo" class="logo"> <!-- Your Logo -->
                        <h3 class="mt-3">Smart Learning Campus</h3>
                    </div>

                    <h4 class="mt-2">Welcome Back</h4>
                    <p>Welcome Back, Please Enter Your Details</p>
                    
                    <!-- Sign In / Sign Up Toggle -->
                    <div class="btn-group w-100 mb-3 signInSignUpSection" role="group">
                        <button type="button" class="btn btn-light active SignIn">Sign In</button>
                        <button type="button" class="btn btn-light SignUp">Sign Up</button>
                    </div>

                    <!-- Login Form -->
                    <form method="post" asp-action="Authenticate">
                            <div class="form-group mb-3">
                                <label class="text-start w-100">Email Address</label>
                                <input type="email" class="form-control" id="email" name="email" required placeholder="Enter your email">
                                <span class="text-danger" id="emailError"></span> <!-- Error Message -->
                            </div>
    
                            <div class="form-group mb-3">
                                <label class="text-start w-100">Password</label>
                                <input type="password" class="form-control" id="password" name="password" required placeholder="Enter your password">
                            </div>
    
                            <button type="submit" class="btn btn-primary w-100">Sign In</button>
                    </form>

                    <!-- Footer Text -->
                    <p class="mt-4 footer-text">Powered By Quality Apps (PVT) LTD.</p>
                </div>
            </div>

            <!-- Right Side: Image -->
            <div class="col-md-6 d-none d-md-block image-container">
                <img src="~/images/LoginCoverImage.png" alt="Background" class="img-fluid">
            </div>
        </div>
    </div>
</body>
</html>

















