@{
    Layout = null; /* No default header/footer */
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login | Smart Learning Campus</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/custom.css"> <!-- Custom CSS -->
</head>
<body>
    <div class="container-fluid login-container">
        <div class="row">
            <!-- Left Side: Login Form -->
            <div class="col-md-6 d-flex align-items-center justify-content-center form-container">
                <div class="login-box text-center">
                    <img src="~/images/logo.png" alt="Logo" class="logo"> <!-- Your Logo -->
                    <h3 class="mt-3">Smart Learning Campus</h3>
                    <h4 class="mt-2">Welcome To Smart Learning Campus</h4>
                    <p>Welcome, Please Enter Your Details</p>
                    
                    <!-- Sign In / Sign Up Toggle -->
                    <div class="btn-group w-100 mb-3 signInSignUpSection" role="group">
                        <button type="button" class="btn btn-light SignIn">Sign In</button>
                        <button type="button" class="btn btn-light active SignUp">Sign Up</button>
                    </div>

                    <!-- Login Form -->
                    <form method="post" asp-action="Authenticate">
                        <div class="form-group mb-3">
                            <label class="text-start w-100">Email Address</label>
                            <input type="email" class="form-control" name="email" required placeholder="Enter your email">
                            <span class="text-danger">@ViewBag.Error</span> <!-- Error Message -->
                        </div> 

                        <div class="notification-box yellow-notification">
                            <span class="highlight">To process Sign Up option you should enter the 
                                password which esmartcampus sent to you. Password
                                has been sent to  nilanchathura8@gmail.com
                            </span>.
                        </div>

                        <div class="form-group mb-3">
                            <label class="text-start w-100">Password</label>
                            <input type="password" class="form-control" name="password" required placeholder="Enter your password">
                        </div>

                        <button type="submit" class="btn btn-primary w-100">Continue</button>
                    </form>

                    <!-- Footer Text -->
                    <p class="mt-4 footer-text">Lorem Ipsum is simply dummy text of the printing and typesetting industry...</p>
                </div>
            </div>

            <!-- Right Side: Image -->
            <div class="col-md-6 d-none d-md-block image-container">
                <img src="~/images/LoginCoverImage.png" alt="Background" class="img-fluid">
            </div>
        </div>
    </div>
</body>
</html>
