@{
    Layout = null; /* No default header/footer */
    ViewData["Title"] = "Password Authentication";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <!-- Bootstrap CSS (Local) -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true">
    <!-- Bootstrap JS (Local) -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/custom.css"> <!-- Custom CSS -->
</head>
<body>
    <div class="container-fluid login-container signUpPagePassword">
        <div class="row">
            <!-- Left Side: Login Form -->
            <div class="col-md-6 d-flex align-items-center justify-content-center form-container loginContainerClass">
                <div class="login-box text-center">
                    <div class="welcomeLogoText">
                        <img src="~/images/logo.png" alt="Logo" class="logo"> <!-- Your Logo -->
                        <h3 class="mt-3">Smart Learning Campus</h3>
                    </div>

                    <h4 class="mt-2">Welcome to Smart Learning Campus</h4>
                    <p>Welcome, Please Enter Your Details</p>

                    <!-- Sign In / Sign Up Toggle -->
                    <div class="btn-group w-100 mb-3 signInSignUpSection" role="group">
                        <button type="button" class="btn btn-light SignIn">Sign In</button>
                        <button type="button" class="btn btn-light active SignUp">Sign Up</button>
                    </div>

                    <!-- Password Generated Confirmation -->
                    @if (ViewBag.PasswordSent != null && (bool)ViewBag.PasswordSent)
                    {
                        <h4>Password Generated Successfully</h4>
                    }

                    <!-- Login Form (Only if password has not been sent yet) -->
                    @if (ViewBag.PasswordSent == null || !(bool)ViewBag.PasswordSent)
                    {
                        <form method="post" asp-action="AuthenticatePassword">
                            <div class="form-group mb-3">
                                <input type="email" class="form-control" name="email" required
                                       placeholder="Enter your email"
                                       value="@ViewBag.Email" readonly>
                            </div>

                            <div class="notification-box yellow-notification">
                                <span class="highlight">Please enter the password which Smart Campus mailed to you.</span>
                            </div>

                            <div class="form-group mb-3">
                                <input type="password" class="form-control" name="password" required placeholder="Enter your password">
                            </div>

                            <span class="text-danger">@ViewBag.Error</span>

                            <button type="submit" class="btn btn-primary w-100">Continue</button>
                        </form>
                    }

                    <!-- Footer Text -->
                    <p class="mt-4 footer-text">Powered By Quality Apps (PVT) LTD.</p>
                </div>
            </div>

            <!-- Right Side: Image -->
            <div class="col-md-6 d-none d-md-block image-container">
                <img src="~/images/LoginCoverImage.png" alt="Background" class="img-fluid">
            </div>
        </div>
    </div>
</body>
</html>
