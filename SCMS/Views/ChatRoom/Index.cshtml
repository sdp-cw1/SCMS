@{

    ViewData["Title"] = "ChatRoom";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Smart Learning Campus</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Custom CSS -->
    <link href="~/css/custom.css" rel="stylesheet">
    <style>
        
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            

            <!-- Main Content -->
            <div class="col-md-12">
                

                <!-- Chat Room Section -->
                <div class="row">
                    <div class="col-md-8">

                        <img src="~/images/HomePageBanner.png">

                        <div class="chat-container">
                            <div class="chat-header">KU - TOP UP Group</div>

                            <div class="chat-message">
                                <div class="message-content">
                                    <div class="message-sender">Heshan Rathnayaka</div>
                                    <div>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</div>
                                    <div class="message-time">7:31 p.m</div>
                                </div>
                            </div>

                            <div class="chat-message">
                                <div class="message-content">
                                    <div class="message-sender">Yasuri Thathsarani</div>
                                    <div>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</div>
                                    <div class="message-time">10:00 p.m</div>
                                </div>
                            </div>

                            <div class="chat-message myMessage">
                                <div class="message-content">
                                    <div class="message-sender">You</div>
                                    <div>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</div>
                                    <div class="message-time">11:50 p.m</div>
                                </div>
                            </div>

                            <div class="chat-footer">
                                <input type="text" placeholder="Type a message...">
                                <button class="send-btn">+</button>
                            </div>
                        </div>
                    </div>

                    <!-- Sidebar Widgets -->
                    <div class="col-md-4">
                        <!-- Date Widget -->
                        <div class="widget-box text-center">
                            <div class="date-box">
                                <div class="date-item">09</div>
                                <div class="date-item">FEB</div>
                                <div class="date-item">25</div>
                            </div>
                        </div>
                       

                        <!-- Question of the Day -->
                        <div class="widget-box mb-3">
                            <h5><strong>Question of the day</strong></h5>
                            <p>1. Lorem Ipsum is simply dummy text?</p>
                            <div>
                                <input type="checkbox"> Lorem Ipsum is simply<br>
                                <input type="checkbox" checked> Dummy Text<br>
                                <input type="checkbox"> Simply<br>
                                <input type="checkbox"> Lorem
                            </div>
                            <button class="btn btn-success mt-2">Submit</button>
                        </div>

                        <!-- Calendar Widget -->
                        <!-- Calendar Widget -->
                        <div class="widget-box">
                            <h5 class="fw-bold text-center mb-3">Calendar Widget</h5>
                            <div class="text-center mb-2">
                                <strong>February</strong>
                            </div>
                            <div class="calendar-grid">
                                @for (int day = 1; day <= 31; day++)
                                {
                                    var activeDays = new List<int> { 1, 2, 3, 4, 5, 6 };
                                    var isActive = activeDays.Contains(day) ? "active" : "";
                                    <div class="calendar-day @isActive">
                                        @day.ToString("00")
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    
</body>
</html>
